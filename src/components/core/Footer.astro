---
import somicet from "@assets/logos/white-logo.svg"
import facebook from "@assets/icons/facebook.svg"
import twitter from "@assets/icons/twitter.svg"
---
<section class="footer">
  <div class="footer__container">
    <div class="footer__somicet">
      <img src={somicet} alt="somicet">
      <p>
        SOMICET 2023
      </p>
    </div>
    <div class="footer__privacy">
      <a href="/aviso-de-privacidad">
        Aviso de privacidad
      </a>
    </div>
    <div class="footer__social-media">
      <a href="https://www.facebook.com/SOMICET" target="_blank">
        <img src={facebook} alt="facebook">
      </a>
      <a href="https://twitter.com/celulastroncal?s=11" target="_blank">
        <img src={twitter} alt="twitter">
      </a>
    </div>

  </div>
</section>

<style lang="scss">
  @import "@assets/library";
  .footer{
    width: 100%;
    height: 230px;
    background: $primary-color;
    display: flex;
    justify-content:center;
    @media (max-width: 768px){
      flex-direction: column;
      height: auto;
    }
    &__container{
      width: 100%;
      max-width: 880px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      @media (max-width: 768px){
        flex-direction: column;
        min-height: 200px;
        justify-content: center;

      }
    }
    &__somicet{
      width: 33%;
      display: flex;
      flex-direction: column;
      align-items: center;
      & img{
        width: 90px;
        height: 90px;
        margin-bottom: 5px;
        @media (max-width: 768px){
          width: 50px;
          height: 50px;
          margin: 2px;
        }
      }
      & p{
        font-size: 20px;
        line-height: 24px;
        color: $white;
        font-weight: 600;
        @media (max-width: 768px){
          font-size: 16px;
          line-height: 20px;
        }
      }

      
    }
    &__privacy{
      width: 33%;
      text-align: center;
      @media (max-width: 768px){
        margin: 10px 0;
      }
      & a{
        color: $white;
        font-size: 16px;
        line-height: 20px;
        text-decoration: none;
      }
    }
    &__social-media{
      display: flex;
      justify-content: center;
      align-items: center;
      width: 33%;
      & a{
        text-decoration: none;
      }
      & img{
        margin-left: 10px;
        @media (max-width: 768px){
          margin: 0;
          width: 30px;
          height: 30px;
          &:nth-child(1){
            margin-right: 7px;
          }
        }
      }
     
    }

  }

</style>