---
  import clock from "@assets/icons/clock.svg"
  const { 
    topicName,
    timeLapse, 
    img,
    moderatorName, 
    conferences,
    } = Astro.props;
---

<section class="schedule-card">
  <div class="schedule-card__title">
    <p>
      {topicName}
    </p>
    <span>
      {timeLapse}
    </span>
  </div>
  <div class="schedule-card__cards">
    <div class="schedule-card__img">
      <img src={img} alt="">
      <p>
        {moderatorName}
      </p><br>
      <span>
        Moderador
      </span>
    </div>
    {conferences.map((item)=>
    <div class="schedule-card__topics-section">
      <div class="schedule-card__content">
        <div class="schedule-card__speaker">
          <p>
            {item.speaker_name}
          </p><br>
          <span>
            {item.institution}
          </span>
        </div>
        <div class="schedule-card__topic">
          <p>
            {item.topic}
          </p>
          <div class="schedule-card__time-lapse">
            <img src={clock} alt="">
            <p>
              {item.schedule}
            </p>
          </div>
        </div>
      </div>
    </div>
    )}
  </div>

</section>

<style lang="scss">
   @import "@assets/library";
  .schedule-card{
    width: 100%;
    max-width: 880px;
    height: 670px;
    color:$white;
    border: 4px solid #0CA1AE;
    background: $black;
    display: flex;
    flex-direction: column;
    border-radius: 8px;
    margin-bottom:40px;
    &__title{
      width: 100%;
      height: 85px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      background:rgba(12, 161, 174, 0.40);
      &:nth-child(2){
        background-color: rgba(39, 170, 42, 0.40);
      }
      &:nth-child(3){
        background: rgba(197, 60, 29, 0.50);
      }
      &:nth-child(4){
        background: rgba(195, 19, 205, 0.40);
      }
      &:nth-child(5){
        background: rgba(200, 210, 79, 0.40);
      }
      & p{
        font-size: 24px;
        line-height: 28px;
        font-weight: 600;
        @media (max-width: 768px){
          font-size: 16px;
          line-height: 20px;
          height: 50px;
        }
      }
    }
    &__cards{
      width: 100%;
      display: flex;
      justify-content: center;
      height: 100%;
      padding: 40px;
    }
    &__img{
      width: 30%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100%;
      & img{
        width: 200px;
        height: auto;
        border: 4px solid #0CA1AE;
        margin-bottom: 20px;
        border-radius: 8px;
      }
      & p{
        text-align: center;
        font-size: 20px;
        line-height: 24px;
        color: $white;
        font-weight: 600;
      }
      & span{
        text-align: center;
        font-size: 16px;
        line-height: 20px;
        font-weight: 600  ;
      }
  
    }
    &__topics-section{
      width: 70%;
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      height: 100%;
      padding-left: 3%;
      background-image: url('../../assets/cells/stemCells2.png');
      background-position: center;
      background-repeat: no-repeat;
      opacity: 0.4;
      background-size:70% auto;
    }
    &__content{
      width: 250px;
      height: 130px;
      border-radius: 4px;
      border: 1px solid #0CA1AE;
    }
    &__speaker{
      width: 100%;
      height: 100px;
      text-align: center;
      background-color: #0CA1AE;
      color: $white;
      & p{
        font-size: 16px;
        line-height: 20px;
        font-weight: 600;
      }
      & span{
        font-size: 12px;
        line-height: 16px;
        font-weight: 400;
      }
  
    }
    &__topic{
      display: flex;
      flex-direction: column;
      font-size: 14px;
      line-height: 18px;
  
    }
    &__time-lapse{
      display: flex;
      max-width: 120px;
      justify-content:space-between;
  
    }
  }

</style>