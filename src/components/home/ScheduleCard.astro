---
import clock from "@assets/icons/clock.svg"
// import alejandro from "@assets/moderators/alejandro.png"
// import anayansi from "@assets/moderators/anayansi.png"
// import elizabeth from "@assets/moderators/elizabeth.png"
// import juan from "@assets/moderators/juan.png"
// import monica from "@assets/moderators/monica.png"
// import susana from "@assets/moderators/susana.png"

const { item } = Astro.props;

const { 
  topic_name,
  time_lapse, 
  img,
  moderator, 
  conferences,
  op_color,
  color,
  border,
  bg
} = item;

const borderColor = `1px solid ${color}`;
const bgImg = bg;
const bgColor = color;
const moderatorImg = img;
---

<section 
  class="schedule-card"
  style={{border: border,}}
>
  <div 
    style={{background: op_color}}
    class="schedule-card__title">
    <p>
      {topic_name}
    </p>
    <span>
      {time_lapse}
    </span>
  </div>
  <div class="schedule-card__cards">
    <div class="schedule-card__img">
      <img 
        style={{border: border}}
        src={moderatorImg} 
        alt=""
      >
      <div class="schedule-card__name">
        <p>
          {moderator}
        </p>
        <span>
          Moderador
        </span>

      </div>
    </div>
    <div class="schedule-card__topics-section">
      <div 
        class="schedule-card__bg"
      />
    {conferences.map((item)=>
      <div class="schedule-card__content">
        <div class="schedule-card__speaker">
          <p>
            {item.speaker_name}
          </p>
          <span>
            {item.institution}
          </span>
        </div>
        <div class="schedule-card__topic">
          <p>
            {item.topic}
          </p>
          <div class="schedule-card__time-lapse">
            <img src={clock} alt="">
            <p>
              {item.schedule}
            </p>
          </div>
        </div>
      </div>
      )}
    </div>
  </div>

</section>

<style lang="scss" define:vars={{ borderColor, bgImg, bgColor }}>
   @import "@assets/library";
  .schedule-card{
    width: 100%;
    max-width: 880px;
    height: 670px;
    color:$white;
    border: 4px solid #0CA1AE;
    background: #000000;
    display: flex;
    flex-direction: column;
    border-radius: 8px;
    margin-bottom:40px;
    @media (max-width: 768px){
      max-width: 90%;
      align-items: center;
      height: auto;
      
    }
    &__title{
      width: 100%;
      height: 85px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      @media (max-width: 768px){
        
      }
      & p{
        font-size: 24px;
        line-height: 28px;
        font-weight: 600;
        @media (max-width: 768px){
          font-size: 16px;
          line-height: 20px;
          
        }
      }
    }
    &__cards{
      width: 100%;
      display: flex;
      justify-content: center;
      height: 100%;
      padding: 20px;
      @media (max-width: 768px){
        flex-direction: column;
      }
    }
    &__img{
      width: 30%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100%;
      @media (max-width: 768px){
        
        width: 100%;
      }
      & img{
        width: 200px;
        height: auto;
        margin-bottom: 20px;
        border-radius: 8px;
        @media (max-width: 768px){
          width: 120px
        }
      }
      
    }
    &__name{
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      @media (max-width: 768px){
        height: 60px;
        justify-content: center;
      }
      & p{
        text-align: center;
        font-size: 20px;
        line-height: 24px;
        color: $white;
        font-weight: 600;
        @media (max-width: 768px){
          font-size: 16px;
          line-height: 20px;
        }
      }
      & span{
        text-align: center;
        font-size: 16px;
        line-height: 20px;
        font-weight: 600;
        @media (max-width: 768px){
          font-size: 12px;
          line-height: 16px;


        }
      }
    }
    &__topics-section{
      width: 70%;
      position: relative;
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      height: 100%;
      padding-left: 3%;
      justify-content: space-around;
      @media (max-width: 768px){
        width: 100%;
        padding: 0;
      }
    }
    &__bg{
      width: 100%;
      height: 100%;
      position: absolute;
      background-image: url('../../assets/cells/stemCells2.png');
      background-position: center;
      background-repeat: no-repeat;
      opacity: 0.4;
      background-size:70% auto;
    }
    &__content{
      width: 45%;
      margin-left: 20px;
      border-radius: 4px;
      border: var(--borderColor);
      z-index: 1;
      @media (max-width: 768px){
        width: 90%;
        margin-left: 0;
        margin-bottom: 15px;
      }
    }
    &__speaker{
      width: 100%;
      height: 100px;
      text-align: center;
      background-color: var(--bgColor);
      color: $white;
      display: flex;
      flex-direction: column;
      justify-content: center;
      padding: 0 5px;
      @media (max-width: 768px){
        height: 100px;
      }
      & p{
        font-size: 16px;
        line-height: 20px;
        font-weight: 600;
      }
      & span{
        font-size: 12px;
        line-height: 16px;
        font-weight: 400;
      }
  
    }
    &__topic{
      display: flex;
      flex-direction: column;
      justify-content: space-around;
      text-align: center;
      padding: 0 10px;
      height: 130px;
      font-size: 14px;
      line-height: 18px;
      color: $white;
      @media (max-width: 768px){
        font-size: 12px;
        line-height: 16px;
        height: 100px;
        
      }
    }
    &__time-lapse{
      display: flex;
      max-width: 130px;
      justify-content:space-between;
      @media (max-width: 768px){
        max-width: 110px;
      }
    }
  }

</style>