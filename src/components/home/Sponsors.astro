---
import cipquim from "@assets/logos/CIPQUIM.png"
---
<section class="sponsors">
  <div class="sponsors__title">
    <h3>
      Nuestros patrocinadores
    </h3>
  </div>
  <div class="sponsors__content">
    <div class="sponsors__line"/>
      <div class="sponsors__logo">
        <img src={cipquim} alt="cipquim-logo">
        <p>
          CIPQUIM
        </p>
      </div>
    <div class="sponsors__line" />

  </div>

</section>
<style lang="scss">
  @import "@assets/library";
  .sponsors{
    width: 100%;
    height: 300px;
    background:$white;
    display:flex;
    justify-content:space-evenly;;
    flex-direction: column;
    @media (max-width: 768px){
      height: 200px;
    }
    &__title{
      display: flex;
      justify-content: center;
      align-items: center;
      & h3{
        font-size: 32px;
        line-height: 36px;
        font-weight: 600;
        @media (max-width: 768px){
          font-size: 20px;
          line-height: 24px;
        }
      }
    }
    &__content{
      width: 100%;
      height: 100px;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 0 12%;
    }
    &__line{
      width: 40%;
      height: 0;
      border: 1px solid $secondary-color-700;
    }
    &__logo{
      width: 20%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      & img{
        width: 70px;
        height: 70px;
        @media (max-width: 768px){
          width: 50px;
          height: 50px;
        }
      }
      & p{
        font-size: 24px;
        line-height: 28px;
        text-align: center;
        margin-top: 10px;
        @media (max-width: 768px){
          font-size: 16px;
          line-height: 20px;
          margin-top: 5px;
        }
      }
    }

  }
</style>