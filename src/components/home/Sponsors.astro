---
import cipquim from "@assets/logos/CIPQUIM.png"
import accesoLab from "@assets/logos/logo-accesolab.png"
---
<section class="sponsors">
  <div class="sponsors__title">
    <h3>
      Nuestros patrocinadores
    </h3>
  </div>
  <div class="sponsors__content">
    <div class="sponsors__line"/>
      <div class="sponsors__brands">
        <div class="sponsors__logo">
          <img src={cipquim} alt="cipquim-logo">
          <p>
            CIPQUIM
          </p>
        </div>
        <div class="sponsors__logo">
          <img src={accesoLab} alt="">
          <p>
            AccesoLab
          </p>
        </div>

      </div>
    <div class="sponsors__line" />

  </div>

</section>
<style lang="scss">
  @import "@assets/library";
  .sponsors{
    width: 100%;
    height: 450px;
    background:$white;
    display:flex;
    justify-content:space-evenly;;
    flex-direction: column;
    @media (max-width: 768px){
      height: 400px;
    }
    &__title{
      display: flex;
      justify-content: center;
      align-items: center;
      & h3{
        font-size: 32px;
        line-height: 36px;
        font-weight: 600;
        @media (max-width: 768px){
          font-size: 20px;
          line-height: 24px;
        }
      }
    }
    &__content{
      width: 100%;
      height: 100px;
      display: flex;
      justify-content: center;
      align-items: center;
      
    }
    &__line{
      width: 40%;
      height: 0;
      border: 1px solid $secondary-color-700;
    }
    &__brands{
      width: 50%;
      display: flex;
      flex-direction: column;
      align-items: center;
      height: 180px;
      justify-content: space-between;
      & img{
        height: 70px;
        @media (max-width: 768px){
          width: 50px;
          height: 50px;
        }
      }
      
      &:nth-child(2){
        & img{
          @media (max-width: 768px){
            width: auto;
            max-width: 120px;
            height: auto;
          }
        }
      }
    }
    &__logo{
      
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      
      & p{
        font-size: 14px;
        line-height: 18px;
        text-align: center;
        margin-top: 10px;
        @media (max-width: 768px){
          font-size: 16px;
          line-height: 20px;
          margin-top: 5px;
        }
      }
    }

  }
</style>