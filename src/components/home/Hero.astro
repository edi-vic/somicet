<style lang="scss">
  @import "@assets/library";
  .home{
    width: 100%;
    height: 788px;
    background-image: url('../../assets/cells/stemCells2.png');
    background-position: center;
    background-repeat: no-repeat;
    background-color: black;
    display: flex;
    justify-content: space-between;
    align-items: center;
    @media (max-width: 768px){
      padding-top: 60px;
      height: 410px;
      margin: 0;
    }
   
    &__circles{
      position: relative;
      height: 100%;
    }
    &__circle{
      position: absolute;
      width: 25px;
      height: 25px;
      top: 65vh;
      left: 6vw;
      background: linear-gradient(to right,rgba(39, 170, 42, 0.40) , #0CA1AE);
      transform-origin: top left;
      border-radius: 50%;
      transform: scale(0) rotate(0deg) translate(-50%, -50%);
      animation: cube 20s ease-in forwards infinite;
      &:nth-child(2) {
        background:rgba(39, 170, 42, 0.40);
        top: 30vh;
        left: 20vw;
        animation-delay: 3s;
        width: 10px;
        height: 10px;
        z-index: 1;
      }
      &:nth-child(3){
        width: 15px;
        height: 15px;
        top: 15vh;
        left: 5vw;
        animation-delay: 6s;
        background: rgba(12, 161, 174, 0.40);
      }
      &:nth-child(4){
        width: 15px;
        height: 15px;
        top: 25vh;
        left: 5vw;
        animation-delay: 10s;
        background: radial-gradient(circle, rgba(200, 210, 79, 0.40) 0%, rgba(39, 170, 42, 0.40) 94%);
      }
      &:nth-child(5){
        width: 15px;
        height: 15px;
        top: 40vh;
        left: 9vw;
        animation-delay: 30s;
      }
      &:nth-child(6){
        width: 15px;
        height: 15px;
        top: 50vh;
        left: 80vw;
        animation-delay: 6s;
        background: rgba(12, 161, 174, 0.40);
      }
      &:nth-child(7){
        width: 8px;
        height: 8px;
        top: 35vh;
        left: 85vw;
        animation-delay: 10s;
        background: radial-gradient(circle, rgba(200, 210, 79, 0.40) 0%, rgba(39, 170, 42, 0.40) 94%);
      }
    }
    &__center-section{
      width: 100%; 
      height: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background: rgba(200, 210, 79, 0.2);
      backdrop-filter: blur(5px);
      z-index: 1;
      
    }
    &__text{
      width: 100%;
      display: flex;
      flex-direction: column;
      text-align: center;
      max-width: 790px;
      & h2{
        font-size: 40px;
        line-height: 42px;
        font-weight: 600;
        color: $white;
        margin-top: 20px;
        @media (max-width: 768px){
          font-size: 24px;
          line-height: 28px;
        }
        & span{
          font-weight: 400;
          font-size: 32px;
          line-height: 40px;
          @media (max-width: 768px){
            font-size: 18px;
            line-height: 22px;
          }
        }
      }
      & p{
        font-size: 30px;
        line-height: 36px;
        font-weight: 400;
        
        color: $white;
        @media (max-width: 768px){
          font-size: 14px;
          line-height: 18px;
        }
        & span{
          font-size: 20px;
          line-height: 24px;
          font-weight: 400;
          @media (max-width: 768px){
          font-size: 12px;
          line-height: 16px;
        }
        }
      }
    }
  }
  @keyframes cube {
  from {
    transform: scale(0) rotate(0deg) translate(-50%, -50%);   
    opacity: 1;
  }
  to {
    transform: scale(20) rotate(960deg) translate(-50%, -50%); 
    opacity: 0;
  }
  
}
</style>