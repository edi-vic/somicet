<section class="program">
  <div class="program__bg"/>
  <div class="program__content">
    <div class="program__title">
      Programa
    </div>
    <div class="program__topics">
      <div class="program__card">
        <p>
          Células troncales neurales y hematopoyéticas
        </p>
      </div>
      <div class="program__card">
        <p>
          Células estromales mesenquimales
        </p>
      </div>
      <div class="program__card">
        <p>
          Células troncales y de regeneración
        </p>
      </div>
      <div class="program__card">
        <p>
          Células troncales y cancer
        </p>
      </div>
      <div class="program__card">
        <p>
          Envejeciemiento 
        </p>
      </div>
    </div>
    <button>
      <a href="/horarios">
        Ver horarios
      </a>
    </button>
  </div>

</section>
<style lang="scss">
  @import "@assets/library";
  .program{
    width: 100%;
    height: 880px;
    background-color: #000;
    display: flex;
    flex-direction: column;
    position: relative;
    @media (max-width: 768px){
      padding: 0 40px;
    }
    &__bg{
      width: 100%;
      height: 100%;
      background-image: url('../../assets/cells/stemCells2.png');
      background-position: center;
      background-repeat: no-repeat;
      opacity: 0.4;
      position: absolute;
    }
    &__content{
      width: 100%;
      height: 90%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      z-index: 1;
    }
    &__title{
      font-size: 32px;
      line-height: 36px;
      color: $white;
      font-weight: 600;
      @media (max-width: 768px){
        font-size: 20px;
        line-height: 24px;
      }
    } 
    &__topics{
      display: flex;
      width: 100%;
      height: 600px;
      max-width: 880px;
      flex-wrap: wrap;
      justify-content: space-evenly;
      align-items: center;
    }
    &__card{
      width: 300px;
      height: 145px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 8px;
      padding: 8px;
      text-align: center;
      border: 3px solid #0CA1AE;
      background-color: rgba(12, 161, 174, 0.40);
      @media (max-width: 768px){
        width: 220px;
        height: 100px;
      }
      p{
        color: $white;
        font-size: 24px;
        line-height: 28px;
        font-weight: 600;
        @media (max-width: 768px){
          font-size: 16px;
          line-height: 20px;
        }
      }
      &:nth-child(2){
        border-color: #27AA2A;
        background-color: rgba(39, 170, 42, 0.40);
      }
      &:nth-child(3){
        border-color: $primary-color;
        background: rgba(197, 60, 29, 0.50);

      }
      &:nth-child(4){
        border-color: #C313CD;
        background: rgba(195, 19, 205, 0.40);
      }
      &:nth-child(5){
        border-color: #C8D24F;
        background: rgba(200, 210, 79, 0.40);
      }
    }
  }

</style>