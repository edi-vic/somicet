---
const { title, subtitle, price } = Astro.props
---
<section class="price-card">
  <h3>
    {title} <br>
    <span>
      {subtitle}
    </span>
  </h3>
  <p>
    {price}
  </p>

</section>

<style lang="scss">
  @import "@assets/library";
  .price-card{
    width: 200px;
    height: 150px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    border-radius: 8px;
    background: $background-color;
    fill: linear-gradient(0deg, #FFF 0%, #FFF 100%), #FFF;
    filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.26));
    padding: 16px;
    @media (max-width: 768px){
      width: 135px;
      height: 110px;
    }
    & h3{
      font-size: 20px;
      line-height: 24px;
      font-weight: 600;
      text-align: center;
      @media (max-width: 768px){
        font-size: 14px;
        line-height: 16px;
      }
      & span{
        font-size: 16px;
        line-height: 20px;
        font-weight: 400;
        @media (max-width: 768px){
          font-size:12px;
          line-height: 16px;
        }
      }
    }
    & p{
      font-size: 20px;
      line-height: 24px;
      font-weight: 500;
      @media (max-width: 768px){
        font-size: 12px;
        line-height: 16px;
      }
    }
  }

</style>