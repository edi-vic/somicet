---
import { isLoggedIn } from "@helpers/supabase";
import ProjectsModule from "@components/admin/ProjectsModule.vue";
import AdminLayout from "@layouts/AdminLayout.astro";

if (!isLoggedIn()) {
  return Astro.redirect('/admin/login');
}
---

<AdminLayout title="Proyectos">
  <h1>Proyectos</h1>
  <ProjectsModule client:only="vue" />
</AdminLayout>

<style lang="scss">
  h1 {
    margin-bottom: 20px;
  }
</style>