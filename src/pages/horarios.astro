---
import ScheduleCard from "@components/home/ScheduleCard.astro";
import Layout from "@layouts/Layout.astro";
import modImg from "@assets/moderators/monica.png";
import redClock from "@assets/icons/red.svg";
import calendar from "@assets/icons/calendar.svg";
import { SCHEDULE } from "@helpers/shedule"
import logo from "@assets/logo.png"

const thursday = SCHEDULE.thursday;
const friday = SCHEDULE.friday;
---

<Layout title="Programa">
  <section class="schedule">
    <!-- <div class="schedule__btns">
      <a 
        class="schedule__btn-day active"
        id="thursday"
        href=""
      >
        Jueves
      </a>
      <a 
        id="friday"
        class="schedule__btn-day "
        href=""
      >
        Viernes
      </a>
  
    </div> -->
    <div class="schedule__thursday">
      <div class="schedule__welcome">
        <img 
        
          src={modImg}>
        <div class="schedule__info">
          <h3>
            Bienvenida
          </h3>
          <p>
            Dra. Mónica Lamas Gregori
          </p>
          <div class="schedule__time">
            <img 
              class="schedule__icon"
              src={redClock} alt=""
            >
            <p>
              8:00 - 8:15 hrs
            </p>
          </div>
          <div class="schedule__time">
            <img 
              class="schedule__icon"
              src={calendar} alt=""
            >
            <p>
              Jueves, 19 de Octubre
            </p>
          </div>
        </div>
      </div>  
      <ScheduleCard 
        item={thursday[0]}
      />
      <div class="schedule__break">
        <p>
          {thursday[1].break}
        </p>
        <span>
          {thursday[1].time}
        </span>
      </div>
      <ScheduleCard 
        item={thursday[2]}
      />
      <div class="schedule__break">
        <p>
          {thursday[3].break}
        </p>
        <span>
          {thursday[3].time}
        </span>
      </div>
      <ScheduleCard 
        item={thursday[4]}
      />
      <div class="schedule__break">
        <p>
          {thursday[5].break}
        </p>
        <span>
          {thursday[5].time}
        </span>
      </div>
      <ScheduleCard 
        item={thursday[6]}
      />
    </div>
    <div class="schedule__welcome">
      <img 
        style="width:auto;"
        src={logo}>
      <div class="schedule__info">
        <h3>
          Segundo día de actividades
        </h3>
        
        <div class="schedule__time">
          <img 
            class="schedule__icon"
            src={redClock} alt=""
          >
          <p>
            9:00 - 14:15 hrs
          </p>
        </div>
        <div class="schedule__time">
          <img 
            class="schedule__icon"
            src={calendar} alt=""
          >
          <p>
            Viernes, 20 de Octubre
          </p>
        </div>
      </div>
    </div> 
    <div class="schedule__thursday">
      <ScheduleCard 
        item={friday[0]}
      />
      <div class="schedule__break">
        <p>
          {friday[1].break}
        </p>
        <span>
          {friday[1].time}
        </span>
      </div>
      <ScheduleCard 
        item={friday[2]}
      />
      <div class="schedule__break">
        <p>
          {friday[3].break}
        </p>
        <span>
          {friday[3].time}
        </span>
      </div>
    </div>

  </section>
</Layout>
