---
import Layout from "@layouts/Layout.astro";
import PosterModule from "@components/registration/PosterModule.vue";
---

<Layout title="Registro">
  <main class="poster">
    <h1 class="poster__title">Registra tu cartel</h1>
    <div class="poster__wrapper">
      <PosterModule client:only="vue"/>
    </div>
  </main>
</Layout>

<style lang="scss">
@import "@assets/library";
.poster {
  margin: 0 auto;
  padding: 90px 16px 30px;
  &__title {
    color: $black;
    font-size: 24px;
    margin-bottom: 20px;
  }
  &__wrapper {
    margin: 0 auto;
    min-height: 45vh;
    display: flex;
    flex-direction: column;
  }
  @media (min-width: 768px) {
    max-width: 880px;
    padding: 40px 32px;
    &__title {
      font-size: 36px;
      margin-bottom: 28px;
    }
    &__wrapper {
      margin: 0;
    }
  }
}
</style>