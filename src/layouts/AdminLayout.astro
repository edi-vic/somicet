---
import BaseLayout from "@layouts/BaseLayout.astro"
import logo from "@assets/logo.png"
import AdminMenu from "@components/core/AdminMenu.astro"
import Logout from "@components/core/Logout.vue"

const { title } = Astro.props
const adminTitle = `Admin - ${title}`
---

<BaseLayout title={adminTitle}>
  <div class="admin">
    <div class="top-bar">
      <div class="top-bar__left">
        <img class="top-bar__logo" src={logo} alt="logo">
        SOMICET
      </div>
      <div class="top-bar__right">
        <Logout client:only="vue" />
      </div>
    </div>
    <div class="content">
      <AdminMenu section={title} />
      <main>
        <slot />
      </main>
    </div>
  </div>
</BaseLayout>

<style scoped lang="scss">
.admin {
  height: 100vh;
  overflow: hidden;
}
.top-bar {
  width: 100%;
  height: 75px;
  border-bottom: 3px solid lightgray;
  color: black;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20px;
  &__logo {
    width: 50px;
    margin-right: 10px;
  }
}
.content {
  flex: 1;
  display: flex;
}
main {
  flex: 1;
  padding: 20px;
}
</style>